<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/redLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/donnees_complementaires_titre"
        android:layout_centerInParent="true"
        android:text="@string/additional_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toTopOf="@id/donnees_complementaires_email_titre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/donnees_complementaires_email_titre"
        android:layout_centerInParent="true"
        android:text="@string/additional_email_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toStartOf="@id/donnees_complementaires_email_champ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/donnees_complementaires_titre"/>

    <EditText
        android:id = "@+id/donnees_complementaires_email_champ"
        android:autofillHints="email"
        android:inputType="textEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/donnees_complementaires_email_champ"
        app:layout_constraintTop_toTopOf="@id/donnees_complementaires_email_champ"/>




</androidx.constraintlayout.widget.ConstraintLayout>